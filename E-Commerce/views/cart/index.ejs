<% layout('layouts/boilerplate') -%>

<section class="container">
    <h2 class="text-center mb-4">My Cart</h2>
      <div class="row">
        <div class="col-lg-8">
            <% for( let item of user.cart) { %>
              <div class="card mb-3 mx-auto" style="max-width: 640px;">
                  <div class="row g-0">
                    <div class="col-md-4">
                      <img src="<%= item.productid.img %>" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">             
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                          <span><%= item.productid.name %></span>
                          <form class="d-inline" action="/user/<%= item.productid.id %>/delete?_method=delete" method="post">
                            <button style="border: none; background:none;"><i class="fa fa-times btn" aria-hidden="true"></i></button>
                          </form>
                        </h5>
                        <p class="card-text"><%= item.productid.desc %></p>
                        <div>
                          <form class="d-inline" action="/user/<%= item.productid.id %>/remove" method="post">
                            <button class="btn btn-sm bg-primary text-light">-</button>
                          </form>
                          <p class="d-inline"><%= item.quantity %></p>
                          <form class="d-inline" action="/user/<%= item.productid.id %>/add" method="post">
                            <button class="btn btn-sm bg-primary text-light">+</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            <% } %>
          </div>
          <div class="col-lg-4">
              <ul class="list-group">
                <% for( let item of user.cart ) { %>
                  <li class="list-group-item">
                    <span class="fw-bold"><%= item.productid.name %></span> -
                    <span>$ <%= item.productid.price %></span> *
                    <span><%= item.quantity %></span>
                  </li>
                <% } %>
                <li class="list-group-item">
                    <span class="fw-bold">Total Amount : $ <%= totalamount %></span>
                </li>
              </ul>
              <button class="btn btn-sm mt-3 bg-success">Checkout</button>
          </div>
       </div>
</section>



